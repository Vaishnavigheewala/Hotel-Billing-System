}

<h1>Login</h1>

<h4>Usermaster</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @{
            if(ViewBag.Message != null)
            {
                <p style="color:red;">@ViewBag.Message</p>
            }
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Login">
