@model HotelBillingMVC.Models.Feedback

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/dashboard.cshtml";
    <link rel="stylesheet" href="~/css/feed.css" />

}



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" class="feedback-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div> *@
            <h4>Feedback</h4>
            <hr></hr>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" placeholder="Enter Your Email Id" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Responce" class="control-label">Message</label>
                <textarea asp-for="Responce" class="form-control" placeholder="Tell us about your experience!" required></textarea>
                <span asp-validation-for="Responce" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"><h5>Rate your experience</h5></label><br />
                <h6>We highly value your feedback! Kindly take a moment to rate your experience and provide us with your valuable feedback so increases our services.</h6>
                <div class="star-rating">
                    <input id="star5" name="Rating" type="radio" value="5" class="form-control" />
                    <label for="star5" title="5 stars">★</label>
                    <input id="star4" name="Rating" type="radio" value="4" class="form-control" />
                    <label for="star4" title="4 stars">★</label>
                    <input id="star3" name="Rating" type="radio" value="3" class="form-control" />
                    <label for="star3" title="3 stars">★</label>
                    <input id="star2" name="Rating" type="radio" value="2" class="form-control" />
                    <label for="star2" title="2 stars">★</label>
                    <input id="star1" name="Rating" type="radio" value="1" class="form-control" />
                    <label for="star1" title="1 star">★</label>
                </div>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedIdId" class="control-label"></label>
                <select asp-for="FeedIdId" class ="form-control" asp-items="ViewBag.FeedIdId"></select>
            </div> *@
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ActiveFlag" />Satisfied
                </label>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Submit Feedback" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


